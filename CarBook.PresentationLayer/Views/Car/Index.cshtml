@model List<Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Fahrzeuge</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Model</th>
        <th>Kategorie</th>
        <th>Marke</th>
        <th>Erstzulassung</th>
        <th>Status</th>
        <th>Löschen</th>
        <th>Update</th>
        <th>Details</th>
        <th>Zeigen</th>
        @foreach (var item in Model)
        {
            <tr>
            <td>@item.CarID</td>
            <td>@item.Model</td>
            <td>@item.CarCategoryID</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.Year</td>
            <td>@item.CarStatus.CarStatusName</td>
            <td><a href="#" class="btn btn-outline-danger">Löschen</a></td>
            <td><a href="#" class="btn btn-outline-success">Update</a></td>
            <td><a href="#" class="btn btn-outline-warning">Details</a></td>
            <td><a href="#" class="btn btn-outline-secondary">Zeigen</a></td>
        </tr>
        }
</table>
<a href="#" class="btn btn-outline-primary">Fahrzeug hinzufügen</a>
        

