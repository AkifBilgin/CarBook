@model List<Service>
@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h1>Services</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Service</th>
        <th>Löschen</th>
        <th>Update</th>
        @foreach (var item in Model)
        {
            count++;
            <tr>
            <td>@count</td>
            <td>@item.Title</td>

            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Löschen</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Update</a></td>

        </tr>
        }
</table>
<a href="/Service/AddService" class="btn btn-outline-primary">Service hinzufügen</a>

