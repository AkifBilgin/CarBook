@model Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>AddService</h1>
<form method="post" asp-action="AddService" asp-controller="Service">
    <label>Service Titel</label>
    <input type="text" asp-for="Title" style="border: 1px solid #2222" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Service Beschreibung</label>
    <input type="text" asp-for="Description" style="border: 1px solid #2222" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <label>Service Icon</label>
    <input type="text" asp-for="Icon" style="border: 1px solid #2222" class="form-control" />
    <span asp-validation-for="Icon" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Service hinzufügen</button>
</form>
