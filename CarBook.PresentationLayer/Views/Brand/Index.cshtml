@model List<Brand>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marke</th>
        <th>Status</th>
        <th>Löschen</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandID</td>
            <td>@item.BrandName</td>
            <td>@item.Status</td>
            <td><a href="/Brand/DeleteBrand/@item.BrandID" class="btn btn-danger">Löschen</a></td>
            <td><a href="/Brand/UpdateBrand/@item.BrandID" class="btn btn-success">Update</a></td>
        </tr>
    }
   
</table>
<a href="/Brand/AddBrand" class="btn btn-primary">Neu Marke</a>
