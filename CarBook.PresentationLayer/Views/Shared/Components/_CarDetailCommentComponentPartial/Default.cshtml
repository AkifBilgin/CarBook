@model List<Comment>
<h3 class="mb-5">@Model.Count Kommentare</h3>


<ul class="comment-list">
    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="~/carrent-master/images/person_2.jpg" alt="Free Website Template by Free-Template.co">
            </div>
            <div class="comment-body">
                <h3>@item.NameSurname</h3>
                <div class="meta">@item.CreatedDate.ToString("dd.MMMM.yyyy")</div>
                <p>@item.Description</p>
                <p><a href="#" class="reply">Antworten</a></p>
            </div>
        </li>

    }
</ul>