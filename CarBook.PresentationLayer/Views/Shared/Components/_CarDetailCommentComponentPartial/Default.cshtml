@model List<Comment>
<h3 class="mb-5">@Model.Count Kommentare</h3>


<ul class="comment-list">
    @foreach (var item in Model)
    {
        var name = item.NameSurname.Split(" ");
        var initials = name[0].Substring(0,1) + name[1].Substring(0,1);
        <li class="comment">
            <div class="vcard bio">
                <div class="initials">@initials</div>
            </div>
            <div class="comment-body">
                <h3>@item.NameSurname</h3>
                <div class="meta">@item.CreatedDate.ToString("dd.MMMM.yyyy")</div>
                <p>@item.Description</p>
                <p><a href="#makeComment" class="reply">Antworten</a></p>
            </div>
        </li>

    }
</ul>

<script>
    function getRandomColor() {
        var letters = '0123456789ABCDEF';
        var color = '#';
        for (var i = 0; i < 6; i++) {
            color += letters[Math.floor(Math.random() * 16)];
        }
        return color;
    }
    window.onload = function () {
        var initialsElements = document.querySelectorAll('.initials');
        initialsElements.forEach(function (element) {
            element.style.backgroundColor = getRandomColor();
        });
    };
</script>