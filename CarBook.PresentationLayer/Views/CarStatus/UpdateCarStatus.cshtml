@model CarStatus
@{
    ViewData["Title"] = "UpdateCarStatus";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h1>Status ändern</h1>
<form method="post">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-floating mb-3">
                    <input type="hidden" asp-for="CarStatusID" />
                    <input type="text" class="form-control" id="floatingInput" asp-for="CarStatusName"
                           placeholder="Marke">
                    <label for="floatingInput">Marke</label>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-outline-primary">Hinzufügen <i class="ri-add-circle-line"></i></button>
</form>