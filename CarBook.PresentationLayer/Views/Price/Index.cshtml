@model List<Price>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Miet Preise</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Fahrzeug</th>
        <th>Zahlungsart</th>
        <th>Preis</th>
        <th>Löschen</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PriceID</td>
            <td>@item.Car.Brand.BrandName @item.Car.Model</td>
            <td>@item.PriceType</td>
            <td>@item.PriceValue</td>
            <td><a href="/Price/DeletePrice/@item.PriceID" class="btn btn-outline-danger">Löschen</a></td>
            <td><a href="/Price/UpdatePrice/@item.PriceID" class="btn btn-outline-success">Update</a></td>
        </tr>
    }
</table>

<a href="/Price/CreatePrice" class="btn btn-outline-primary">Preis hinzufügen</a>

