@model ResultHowItWorksDto
<form method="post" asp-action="UpdateHowItWorks" asp-controller="HowItWorks">
    <div class="modal fade" id="updateHowItWorks-@Model.HowItWorksStepID" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Schritt hinzufügen</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="HowItWorksStepID" />
                    <label>Schritt:</label>
                    <br />
                    <br />
                    <textarea asp-for="Description" cols="35" rows="3"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Schließen</button>
                    <button type="submit" class="btn btn-primary">Ändern</button>
                </div>
            </div>
        </div>
    </div>
</form>
